FROM python:3.12-slim
WORKDIR /app

# Install nginx and Python deps
RUN apt-get update \
    && apt-get install -y --no-install-recommends nginx \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY . .
# Nginx configuration for reverse proxy to Gunicorn
COPY nginx.conf /etc/nginx/conf.d/default.conf
# SSL certificates
COPY certs/selfsigned.crt /etc/ssl/certs/
COPY certs/selfsigned.key /etc/ssl/private/

EXPOSE 80 443

# Start Gunicorn and nginx
CMD ["sh", "-c", "gunicorn -b unix:/tmp/gunicorn.sock app:app & nginx -g 'daemon off;'"]
