FROM python:3.12-slim
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY . .
RUN mkdir certs && \
    openssl req -x509 -nodes -newkey rsa:2048 -keyout certs/server.key -out certs/server.crt -subj "/CN=localhost" -days 365
EXPOSE 443
CMD ["gunicorn", "--certfile=certs/server.crt", "--keyfile=certs/server.key", "-b", "0.0.0.0:443", "app:app"]
